{
    "id": "brain_provider_plugin",
    "name": "AI Brain Provider",
    "version": "1.2.0",
    "author": "AWENK AUDICO",
    "description": "A universal AI Brain for agents. Select any configured AI provider (local model or API) to act as the agent's decision-making core.",
    "type": "PLUGIN",
    "subtype": "BRAIN_PROVIDER",
    "entry_point": "processor.BrainProviderPlugin",
    "tier": "pro",
    "requires_services": [
        "logger",
        "loc",
        "kernel",
        "variable_manager_service",
        "ai_provider_manager_service"
    ],
    "permissions": [],
    "display_properties": {
        "shape": "circle",
        "icon_file": "icon.gif"
    },
    "properties": [
        {
            "id": "selected_ai_provider",
            "type": "enum",
            "label": "loc.brain_provider_select_label",
            "default": ""
        }
    ],
    "output_ports": [
        {
            "name": "brain_output",
            "display_name": "Brain",
            "port_position": "top",
            "type": "tool"
        }
    ]
}