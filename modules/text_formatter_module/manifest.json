{
    "id": "text_formatter_module",
    "name": "Text Formatter",
    "version": "1.0.0",
    "icon_file": "icon.gif",
    "author": "Awenk Audico",
    "email": "Contributor@teetah.art",
    "website": "www.teetah.art",
    "description": "Changes the case of a text string (e.g., to uppercase, lowercase, etc.).",
    "type": "LOGIC",
    "entry_point": "processor.TextFormatterModule",
    "requires_input": true,
    "requires_services": [
        "logger",
        "loc"
    ],
    "output_ports": [
        {
            "name": "success",
            "display_name": "loc.port_success"
        }
    ],
    "output_schema": [
        {
            "name": "formatted_text",
            "type": "string",
            "description": "The text after formatting has been applied."
        }
    ]
}