{
    "id": "file_system_list_module",
    "name": "File System: List Items",
    "version": "1.1",
    "icon_file": "icon.png",
    "author": "Awenk Audico",
    "email": "Contributor@teetah.art",
    "website": "www.teetah.art",
    "description": "Lists files and/or directories in a given path, which can be static or dynamic from the payload.",
    "type": "ACTION",
    "entry_point": "processor.FileSystemListModule",
    "tier": "free",
    "behaviors": [
        "retry",
        "loop"
    ],
    "requires_services": [
        "logger",
        "loc",
        "kernel"
    ],
    "output_ports": [
        {
            "name": "success",
            "display_name": "loc.port_success"
        },
        {
            "name": "error",
            "display_name": "loc.port_on_failure"
        }
    ],
    "output_schema": [
        {
            "name": "data.item_list",
            "type": "list",
            "description": "A list of item names found in the target path."
        }
    ],
    "properties": [
        {
            "id": "target_path",
            "type": "string",
            "label": "loc.prop_target_path_label"
        },
        {
            "id": "item_type",
            "type": "enum",
            "label": "loc.prop_item_type_label",
            "default": "files",
            "options": [
                "files",
                "directories",
                "all"
            ]
        }
    ]
}