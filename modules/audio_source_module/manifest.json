{
    "id": "audio_source_module",
    "name": "Audio Source",
    "version": "1.0.0",
    "icon_file": "icon.png",
    "author": "AWENK AUDICO & Gemini",
    "email": "contributor@teetah.art",
    "website": "www.teetah.art",
    "description": "Provides an audio source by either selecting a local file or generating it from text (Text-to-Speech).",
    "type": "ACTION",
    "entry_point": "processor.AudioSourceModule",
    "tier": "free",
    "behaviors": [
        "retry",
        "loop"
    ],
    "requires_services": [
        "logger",
        "loc",
        "kernel"
    ],
    "properties": [
        {
            "id": "source_mode",
            "type": "enum",
            "label": "loc.prop_audio_source_mode_label",
            "default": "file_path"
        },
        {
            "id": "file_path_mode",
            "type": "enum",
            "label": "loc.prop_path_source_title",
            "default": "manual"
        },
        {
            "id": "manual_path",
            "type": "string",
            "label": "loc.prop_manual_path_label"
        },
        {
            "id": "path_input_key",
            "type": "string",
            "label": "loc.prop_path_input_key_label"
        },
        {
            "id": "tts_text_source",
            "type": "enum",
            "label": "loc.prop_tts_text_source_label",
            "default": "manual"
        },
        {
            "id": "manual_text",
            "type": "textarea",
            "label": "loc.prop_tts_manual_text_label"
        },
        {
            "id": "text_input_key",
            "type": "string",
            "label": "loc.prop_tts_input_key_label"
        },
        {
            "id": "ai_provider_id",
            "type": "enum",
            "label": "loc.prop_tts_ai_provider_label"
        },
        {
            "id": "output_folder_tts",
            "type": "string",
            "label": "loc.prop_tts_output_folder_label"
        }
    ],
    "output_ports": [
        {
            "name": "success",
            "display_name": "loc.port_success"
        },
        {
            "name": "error",
            "display_name": "loc.port_on_failure"
        }
    ],
    "output_schema": [
        {
            "name": "data.audio_path",
            "type": "string",
            "description": "The full path to the final audio file (selected or generated)."
        }
    ]
}