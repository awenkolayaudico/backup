{
    "id": "delete_item_module",
    "name": "Delete File / Folder",
    "version": "1.2.0",
    "icon_file": "icon.gif",
    "author": "awenk audico ",
    "email": "sahidinaola@gmail.com",
    "website": "www.teetah.art",
    "description": "Permanently deletes a file or a folder (including its contents). Use with caution.",
    "type": "ACTION",
    "entry_point": "processor.DeleteItemModule",
    "tier": "free",
    "behaviors": [
        "retry",
        "loop"
    ],
    "requires_services": [
        "logger",
        "loc",
        "kernel"
    ],
    "properties": [
        {
            "id": "delete_mode",
            "type": "enum",
            "options": ["file", "folder"],
            "label": "loc.delete_mode_label"
        },
        {
            "id": "target_path",
            "type": "string",
            "label": "loc.target_path_file_label"
        },
        {
            "id": "ignore_not_found",
            "type": "boolean",
            "label": "loc.ignore_not_found_label"
        }
    ],
    "output_schema": [
        {
            "name": "data.deleted_path",
            "type": "string",
            "description": "The path of the file or folder that was successfully deleted."
        }
    ]
}