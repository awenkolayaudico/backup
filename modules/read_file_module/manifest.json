{
    "id": "read_file_module",
    "name": "Read File",
    "version": "1.1.0",
    "icon_file": "icon.gif",
    "author": "Awenk Audico",
    "email": "Contributor@teetah.art",
    "website": "www.teetah.art",
    "description": "Reads the entire content of a specified file and adds it as a string to the payload.",
    "type": "LOGIC",
    "entry_point": "processor.ReadFileModule",
    "tier": "free",
    "behaviors": [
        "retry",
        "loop"
    ],
    "requires_services": [
        "logger",
        "loc",
        "kernel"
    ],
    "properties": [
        {
            "id": "path_mode",
            "type": "enum",
            "options": [
                "manual",
                "dynamic"
            ],
            "label": "loc.prop_path_source_title"
        },
        {
            "id": "manual_path",
            "type": "string",
            "label": "loc.prop_manual_path_label"
        },
        {
            "id": "path_input_key",
            "type": "string",
            "label": "loc.prop_path_input_key_label"
        },
        {
            "id": "output_key_name",
            "type": "string",
            "label": "loc.prop_output_key_name_label"
        },
        {
            "id": "encoding",
            "type": "enum",
            "options": [
                "utf-8",
                "latin-1",
                "ascii",
                "utf-16"
            ],
            "label": "loc.prop_encoding_label"
        }
    ],
    "output_ports": [
        {
            "name": "success",
            "display_name": "loc.port_success"
        },
        {
            "name": "on_failure",
            "display_name": "loc.port_on_failure"
        }
    ],
    "output_schema": [
        {
            "name": "data.file_content",
            "type": "string",
            "description": "The entire content of the read file as a string. The key name can be changed in properties."
        }
    ]
}