{
    "id": "file_system_actions_module",
    "name": "File System: Basic Actions",
    "version": "1.0",
    "icon_file": "icon.png",
    "author": "Awenk Audico",
    "email": "Contributor@teetah.art",
    "website": "www.teetah.art",
    "description": "Performs basic file actions like copy or delete.",
    "type": "ACTION",
    "entry_point": "processor.FileSystemActionsModule",
    "requires_services": [
        "logger"
    ],
    "output_ports": [
        {
            "name": "success",
            "display_name": "Success"
        },
        {
            "name": "error",
            "display_name": "Error"
        }
    ],
    "properties": [
        {
            "id": "action",
            "type": "enum",
            "label": "Action",
            "default": "delete",
            "options": [
                "delete",
                "copy"
            ]
        },
        {
            "id": "source_path",
            "type": "string",
            "label": "Source File Path"
        },
        {
            "id": "destination_path",
            "type": "string",
            "label": "Destination File Path (for Copy)"
        }
    ]
}